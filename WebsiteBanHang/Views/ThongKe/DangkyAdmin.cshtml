                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @style = "margin-bottom:15px; color:#DC143C;" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DiaChi, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control" })
